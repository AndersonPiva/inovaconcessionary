<div class="page-content panel panel-default col-xs-12 col-sm-6 col-sm-offset-3 panel-color">
  <div class="panel-body">
    <div class="form-horizontal">
      <%= form_for(@category) do |f| %>
      <% if @category.name.present? %>
      <button aria-label="Close" class="close" data-dismiss="modal" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
      <% end %>
      <% if @category.name.present? %>
      <h3>
        <i class="fa fa-pencil"></i>
        Editar Categoria</h3>
      <% else %>
      <h3>Nova Categoria</h3>
      <% end %>
      <div class="form-group page-content">
        <label class="control-label col-sm-2" for="name">Nome</label>
        <div class="col-sm-10">
          <%= f.text_field :name, :placeholder => 'Digite o nome da categoria', class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12 col-sm-4 col-sm-offset-5">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Salvar</button>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
