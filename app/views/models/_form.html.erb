<%= form_for(@model) do |f| %>
<%= error_messages(@model) %>
<div class="page-content">
  <div class="panel panel-default col-xs-12 col-sm-6 col-sm-offset-3 panel-color">
    <div class="panel-body">
      <% if @model.name.present? %>
      <button aria-label="Close" class="close" data-dismiss="modal" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
      <% end %>
      <% if @model.name.present? %>
      <h3>
        <i class="fa fa-pencil"></i>
        Editar Modelo</h3>
      <% else %>
      <h3>Novo modelo</h3>
      <% end %>
      <div class="form-horizontal page-content">
        <div class="form-group">
          <label class="control-label col-sm-2" for="name">Nome</label>
          <div class="col-sm-10">
            <%= f.text_field :name, :placeholder => 'Digite o nome do modelo', class: 'form-control', required: true %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-sm-offset-5">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Salvar</button>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
